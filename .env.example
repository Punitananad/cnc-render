# Flask Configuration
FLASK_SECRET=your-secret-key-here
FLASK_ENV=development

# PostgreSQL Database Configuration
# Option 1: Use DATABASE_URL (for production/Render/Heroku)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Option 2: Use individual components (for development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=calculatentrade
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (Gmail SMTP)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_SENDER_NAME=CalculatenTrade Support

# Dhan API Configuration
DHAN_ACCESS_TOKEN=your-dhan-access-token
DHAN_CLIENT_ID=your-dhan-client-id

# Optional: Redis for sessions (production)
REDIS_URL=redis://localhost:6379/0